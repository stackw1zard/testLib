<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.stackwizards.mcq_wizard.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="\nStackwizards.org\n\n Engineering Questions and more \n"
        android:textColor="#344534"
        android:textSize="24dp" />


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="10dp"
        android:src="@drawable/status_icon" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="* You can download multiple choice questions for offline use. In Training modus, a round consists of only 20 questions. Corretly answered questions are sorted to the back for a more effective learning\n"
            android:textColor="#344534"
            android:textSize="15dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="* You can download multiple choice questions for offline use. Corretly answered questions are sorted to the back for a more effective learning.\n"
            android:textColor="#344534"
            android:textSize="15dp" />

    </LinearLayout>


</LinearLayout>